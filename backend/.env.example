# Backend Environment Variables

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=True

# CORS Origins (comma separated)
ALLOWED_ORIGINS=http://localhost:3000,https://your-netlify-site.netlify.app

# RapidAPI Key - REQUERIDO para precios reales
# Obtener en: https://rapidapi.com/
# Suscribirse a: "Booking.com API" y "Hotels.com Provider"
RAPIDAPI_KEY=your_rapidapi_key_here

# Scraping Configuration
REQUEST_TIMEOUT=30
MAX_RETRIES=3
USE_PROXY=False

# Optional: Para servicios de scraping profesionales
# SCRAPERAPI_KEY=your_key_here
# BRIGHTDATA_API_KEY=your_key_here

# Rate Limiting
RATE_LIMIT_PER_MINUTE=10
